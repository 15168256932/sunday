{
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "**/*.d.ts"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node -r ts-node/register/files"
    },
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "app/",
      "config/",
      "core/",
      "loaders/",
      "plugins/",
      "index.ts"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,js,json"
  }